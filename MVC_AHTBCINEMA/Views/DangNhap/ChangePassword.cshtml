@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string user = Context.Session.GetString("Username");
    bool isLoginIN = !string.IsNullOrEmpty(user);
}

<h2 class="text-center mb-4">Đổi mật khẩu</h2>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="ChangePassword" method="post" class="border rounded p-4 shadow-sm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="mb-3">
                    <label for="CurrentPassword" class="form-label">Mật khẩu hiện tại</label>
                    <input type="password" id="CurrentPassword" name="currentPassword" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="NewPassword" class="form-label">Mật khẩu mới</label>
                    <div class="input-group">
                        <input type="password" id="NewPassword" name="newPassword" class="form-control" required>
                        <button type="button" class="btn btn-outline-secondary" id="showNewPassword">Hiển thị</button>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="ConfirmNewPassword" class="form-label">Xác nhận mật khẩu mới</label>
                    <div class="input-group">
                        <input type="password" id="ConfirmNewPassword" name="confirmNewPassword" class="form-control" required>
                        <button type="button" class="btn btn-outline-secondary" id="showConfirmPassword">Hiển thị</button>
                    </div>
                    <span id="confirmPasswordError" class="text-danger"></span>
                </div>


                <input type="hidden" id="usernameweb" name="usernameweb" value="@user">

                <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý hiển thị mật khẩu mới
            $('#showNewPassword').click(function () {
                togglePasswordVisibility('#NewPassword');
            });

            // Xử lý hiển thị xác nhận mật khẩu mới
            $('#showConfirmPassword').click(function () {
                togglePasswordVisibility('#ConfirmNewPassword');
            });

            // Xử lý hiển thị mật khẩu
            $('#showPassword').change(function () {
                var newPasswordInput = $('#NewPassword');
                var confirmNewPasswordInput = $('#ConfirmNewPassword');

                // Nếu checkbox được chọn, hiển thị mật khẩu; ngược lại ẩn mật khẩu
                if (this.checked) {
                    newPasswordInput.attr('type', 'text');
                    confirmNewPasswordInput.attr('type', 'text');
                } else {
                    newPasswordInput.attr('type', 'password');
                    confirmNewPasswordInput.attr('type', 'password');
                }
            });

            // Kiểm tra mật khẩu mới và xác nhận mật khẩu mới có khớp nhau không
            $('#ConfirmNewPassword').keyup(function () {
                var newPassword = $('#NewPassword').val();
                var confirmPassword = $(this).val();

                if (newPassword !== confirmPassword) {
                    $('#confirmPasswordError').text('Mật khẩu không khớp.');
                } else {
                    $('#confirmPasswordError').text('');
                }
            });
        });

        // Hàm chuyển đổi kiểu hiển thị mật khẩu
        function togglePasswordVisibility(inputField) {
            var input = $(inputField);
            var button = $(inputField + '+button');
            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
                button.text('Ẩn');
            } else {
                input.attr('type', 'password');
                button.text('Hiển thị');
            }
        }
    </script>
}
