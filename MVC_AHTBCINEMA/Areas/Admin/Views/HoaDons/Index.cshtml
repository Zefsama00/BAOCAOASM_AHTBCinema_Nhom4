@model IEnumerable<AHTBCinema_NHOM4_SD18301.Models.HoaDon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .content-wrapper {
        margin-top: 50px;
    }
</style>

<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row sm-2">
                <div class="col-sm-6">
                    <h1>Hóa đơn</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-sm-12">
                    <div class="card">

                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 15%">Giá vé</th>
                                            <th style="width: 15%">Combo</th>
                                            <th style="width: 15%">Nhân viên</th>
                                            <th style="width: 15%">Khách hàng</th>
                                            <th style="width: 10%">Khuyến mãi</th>
                                            <th style="width: 15%">Tổng tiền</th>
                                            <th style="width: 15%">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@String.Format("{0:N0} VNĐ", item.Ve.GiaVe)</td>
                                     
                                                <td>@Html.DisplayFor(modelItem => item.NhanViens.TenNV)</td>
                                                <td>@Html.DisplayFor(modelItem => item.KhachHangs.TenKH)</td>
                                                <td>@Html.DisplayFor(modelItem => item.KhuyenMai)%</td>
                                                <td>@String.Format("{0:N0} VNĐ", item.TongTien)</td>
                                                <td>
                                                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-route-id="@item.IdHD"><i class="fas fa-edit"></i> Sửa</a>
                                                    <a asp-action="Details" class="btn btn-info btn-sm" asp-route-id="@item.IdHD">
                                                        <i class="fas fa-info-circle"></i> Chi tiết
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <!-- Thêm nút "Thêm" -->
                        <div class="card-footer">
                            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm</a>
                        </div>

                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>