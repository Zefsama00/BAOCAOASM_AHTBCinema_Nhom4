@model IEnumerable<AHTBCinema_NHOM4_SD18301.Models.Ve>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .content-wrapper {
        margin-top: 50px;
    }
</style>

<div class="">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row sm-2">
                <div class="col-sm-6">
                    <h1>Danh sách vé</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-sm-12">
                    <div class="card">

                        <!-- /.card-header -->
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th style="width: 20%">Tên vé</th>
                                            <th style="width: 15%">Ghế</th>
                                            <th style="width: 20%">Ca chiếu</th>
                                            <th style="width: 15%">Giá vé</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@Html.DisplayFor(modelItem => item.TenVe)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Ghes.TenGhe)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GioChieus.GioBatDau)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GioChieus.GioKetThuc)</td>
                                                <td>@Html.DisplayFor(modelItem => item.GiaVe)</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Thêm</a>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>  