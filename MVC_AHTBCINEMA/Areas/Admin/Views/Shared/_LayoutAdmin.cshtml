<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - AdminLTE 3 | Tabbed IFrames</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/css/adminlte.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/overlayscrollbars/1.13.0/css/OverlayScrollbars.min.css">

    <style>
        body {
            background-color: #121212; 
            color: #ffffff; 
            font-family: 'Source Sans Pro', sans-serif;
        }

        .logout-btn {
            position: absolute;
            top: 10px;
            right: 20px;
            z-index: 1000;
        }

     
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed dark-mode" data-panel-auto-height-mode="height">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
            </ul>

            <!-- Right navbar links -->
         
                <!-- Logout Button -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a asp-area="" asp-controller="DangNhap" asp-action="Logout" class="btn btn-danger logout-btn">Đăng Xuất</a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="#" class="brand-link">
                <img src="~/Image/logoadmin.jpg" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">AHTBCinema</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Manage Sections -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Phims" asp-action="Index">
                                <i class="nav-icon fas fa-film"></i>
                                <p>Quản Lý Phim</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="Ghes" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-chair"></i>
                                <p>Quản Lý Ghế Ngồi</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="NhanViens" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-user-tie"></i>
                                <p>Quản Lý Nhân Viên</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="DoAnvaNuocs" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-concierge-bell"></i>
                                <p>Quản Lý Dịch Vụ</p>
                            </a>
                        </li>
                        <!-- Customers Section -->
                        <li class="nav-item">
                            <a asp-area="Admin" asp-controller="KhachHangs" asp-action="Index" class="nav-link">
                                <i class="nav-icon fas fa-users"></i>
                                <p>Quản Lý Khách Hàng</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>
                                    Quản Lý Hóa Đơn
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="HoaDons" asp-action="Index" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đơn đang chờ duyệt</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="HoaDons" asp-action="Index1" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Đơn đã duyệt</p>
                                    </a>
                                </li>
                               
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link">
                                <i class="nav-icon fas fa-file-invoice"></i>
                                <p>
                                    Quản lý ca chiếu và giờ chiếu
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a asp-controller="CaChieus" asp-action="Index" class="nav-link">
                                        <i class="fas fa-film nav-icon"></i>
                                        <p>Ca chiếu</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="GioChieus" asp-action="Index" class="nav-link">
                                        <i class="fas fa-clock nav-icon"></i>
                                        <p>Giờ chiếu</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Ves" asp-action="Index">
                                <i class="nav-icon fas fa-ticket-alt"></i>
                                <p>Quản Lý Vé</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Phongs" asp-action="Index">
                                <i class="nav-icon fas fa-ticket-alt"></i>
                                <p>Quản Lý Phòng</p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content" style="height:auto;">
                <div class="container-fluid">
                    @RenderBody()
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
       
        <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/3.2.0/js/adminlte.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/overlayscrollbars/1.13.0/js/jquery.overlayScrollbars.min.js"></script>
</body>
</html>
