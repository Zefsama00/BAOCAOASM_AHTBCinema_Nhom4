@model API_AHTBCINEMA.Models.GioChieu

@{
    ViewData["Title"] = "Chỉnh sửa giờ chiếu";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Thông tin chi tiết</h4>
                <hr />
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdGioChieu" />

                    <div class="form-group">
                        <label asp-for="GioBatDau" class="control-label">Giờ bắt đầu (24h)</label>
                        <input asp-for="GioBatDau" type="time" class="form-control" />
                        <span asp-validation-for="GioBatDau" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="GioKetThuc" class="control-label">Giờ kết thúc (24h)</label>
                        <input asp-for="GioKetThuc" type="time" class="form-control" />
                        <span asp-validation-for="GioKetThuc" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Cachieu" class="control-label">Ca chiếu</label>
                        <select asp-for="Cachieu" class="form-control" asp-items="ViewBag.Cachieu"></select>
                        <span asp-validation-for="Cachieu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Lưu thông tin</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay trở lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
