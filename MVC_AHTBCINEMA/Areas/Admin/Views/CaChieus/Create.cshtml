@model AHTBCinema_NHOM4_SD18301.Models.CaChieu

@{
    ViewData["Title"] = "Thêm Ca Chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm Ca Chiếu</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Phong" class="control-label">Phòng chiếu</label>
                <select asp-for="Phong" class="form-control" asp-items="ViewBag.Phong"></select>
                <span asp-validation-for="Phong" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phim" class="control-label">Phim</label>
                <select asp-for="Phim" class="form-control" asp-items="ViewBag.Phim"></select>
                <span asp-validation-for="Phim" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NgayChieu" class="control-label">Ngày chiếu</label>
                <input asp-for="NgayChieu" class="form-control" type="date"/>
                <span asp-validation-for="NgayChieu" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="Hiện">Hiện</option>
                    <option value="Ẩn">Ẩn</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Tạo mới</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
