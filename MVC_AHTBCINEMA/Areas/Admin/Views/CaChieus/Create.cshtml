@model AHTBCinema_NHOM4_SD18301.Models.CaChieu

@{
    ViewData["Title"] = "Thêm Ca Chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4 text-center my-4">Thêm Ca Chiếu</h1>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="card-title mb-0">Thông tin ca chiếu</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Phong" class="control-label">Phòng chiếu</label>
                <select asp-for="Phong" class="form-control" asp-items="ViewBag.Phong"></select>
                <span asp-validation-for="Phong" class="text-danger"></span>
            </div>

                <div class="form-group col-sm-6">
                    <label asp-for="Phim" class="control-label">Tên phim</label>
                    <select asp-for="Phim" class="form-control" asp-items="ViewBag.Phim"></select>
                    <span asp-validation-for="Phim" class="text-danger"></span>
                </div>
            </div>
           <div class="row">

            <div class="form-group">
                <label asp-for="NgayChieu" class="control-label">Ngày chiếu</label>
                <input asp-for="NgayChieu" class="form-control" type="date" />
                <span asp-validation-for="NgayChieu" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">Tạo mới</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
