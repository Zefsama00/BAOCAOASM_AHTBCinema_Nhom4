@model AHTBCinema_NHOM4_SD18301.Models.CaChieu

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<h4>Sửa ca chiếu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCaChieu" />
            <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="Phong" class="control-label">Số phòng</label>
                    <select asp-for="Phong" class="form-control" asp-items="ViewBag.Phong"></select>
                    <span asp-validation-for="Phong" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="Phim" class="control-label">Tên phim</label>
                    <select asp-for="Phim" class="form-control" asp-items="ViewBag.Phim"></select>
                    <span asp-validation-for="Phim" class="text-danger"></span>
                </div>
            </div>
          <div class="row">
                <div class="form-group col-sm-6">
                    <label asp-for="NgayChieu" class="control-label">Ngày chiếu</label>
                    <input asp-for="NgayChieu" class="form-control" />
                    <span asp-validation-for="NgayChieu" class="text-danger"></span>
                </div>
                <div class="form-group col-sm-6">
                    <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                    <input asp-for="TrangThai" class="form-control" />
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>
          </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
