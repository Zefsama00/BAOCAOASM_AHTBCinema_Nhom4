@model AHTBCinema_NHOM4_SD18301.Models.CaChieu

@{
    ViewData["Title"] = "Thông tin ca chiếu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="display-4 text-center my-4">Thông tin ca chiếu</h1>

<div class="card shadow mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="card-title mb-0">Chi tiết ca chiếu</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">
                Phòng chiếu
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phongs.SoPhong)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Phim
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phims.TenPhim)
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Ngày chiếu
            </dt>
            <dd class="col-sm-9">
                @Model.NgayChieu.ToString("dd/MM/yyyy")
            </dd>
            <dt class="col-sm-3 font-weight-bold">
                Trạng thái
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TrangThai)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-right">
        <a asp-action="Edit" asp-route-id="@Model.IdCaChieu" class="btn btn-warning">Chỉnh sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
    </div>
</div>